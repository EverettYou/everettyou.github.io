<table style="margin-bottom: 0;">
  <thead>
    <tr>
      <th style="width: 6em; white-space: nowrap;">Course</th>
      <th>Title</th>
      <th>Quarters</th>
    </tr>
  </thead>
  <tbody>
    {% for course_pair in site.data.courses %}
    {% assign course_code = course_pair[0] %}
    {% assign course = course_pair[1] %}
    <tr>
      {% assign course_code_display = course_code | replace: "PHYS", "PHYS " %}
      <td style="white-space: nowrap;"><a href="/teaching/{{ course_code }}">{{ course_code_display }}</a></td>
      <td>{{ course.title }}</td>
      <td>{{ course.quarters }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

