{% assign lang = site.data.language.cusdis_lang | default: "en" %}
{% assign lang_data = site.data.language[lang] %}
{% if paginator.total_pages > 1 %}
<div class="pagination">
    <div class="previous">
        
        {% if paginator.previous_page and paginator.previous_page != 1%}
        <!-- << -->
        <a aria-label="{{ lang_data.str_previous_page | default: 'Prev' }}" href="{{ '/' | relative_url }}" class="button">
            <span><i class="fa-solid fa-angle-double-left"></i></span>
        </a>
        {% endif %}
        
        <!-- < previous -->
        <a aria-label="{{ lang_data.str_previous_page | default: 'Prev' }}" href="{{ paginator.previous_page_path | relative_url }}"
           {% unless paginator.previous_page %}style="visibility:hidden"{% endunless %} class="button">
            <span><i class="fa-solid fa-chevron-left"></i></span>
            {{ lang_data.str_previous_page | default: "Prev" }}
        </a>
    </div>

    <div class="page_number">
        {{ paginator.page }} / {{ paginator.total_pages }}
    </div>

    <div class="next">
        
        <!-- next > -->
        <a aria-label="{{ lang_data.str_next_page | default: 'Next' }}" href="{{ paginator.next_page_path | relative_url }}"
           {% unless paginator.next_page %}style="visibility:hidden"{% endunless %} class="button">
            {{ lang_data.str_next_page | default: "Next" }}
            <span><i class="fa-solid fa-chevron-right"></i></span>
        </a>

        {% if paginator.next_page and paginator.next_page != paginator.total_pages %}
        <!-- >> -->
        <a aria-label="{{ lang_data.str_next_page | default: 'Next' }}"
        href="{{ site.paginate_path | relative_url | replace: ':num', paginator.total_pages }}" class="button">
            <span><i class="fa-solid fa-angle-double-right"></i></span>
        </a>
        {% endif %}
        
    </div>
</div>
{% endif %}
