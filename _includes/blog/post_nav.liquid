{% assign lang = site.data.language.cusdis_lang | default: "en" %}
{% assign lang_data = site.data.language[lang] %}
<div id="post-nav">
    {% if page.next.url %}
    <div id="previous-post">
        <a alt="{{ page.next.title }}" href="{{ page.next.url | relative_url }}">
            <p>{{ lang_data.str_previous_post | default: "Previous post" }}</p>
            {{ page.next.title }}
        </a>
    </div>
    {% endif %}

    {% if page.previous.url %}
    <div id="next-post">
        <a alt="{{ page.previous.title }}" href="{{ page.previous.url | relative_url }}">
            <p>{{ lang_data.str_next_post | default: "Next post"}}</p>
            {{ page.previous.title }}
        </a>
    </div>
    {% endif %}
</div>
